<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginEnd="10dp"
    app:cardCornerRadius="10dp">
    <FrameLayout
        android:layout_width="180dp"
        android:layout_height="240dp"
        >
        <ImageView
            android:id="@+id/comic_thumb"
            android:src="@drawable/thanh_guom_diet_quy"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#80000000"
            android:padding="5dp"
            android:layout_gravity="bottom"
            android:orientation="vertical">
            <TextView
                android:id="@+id/comic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="One Piece"
                android:textColor="@color/white"
                android:textSize="14dp" />
            <TextView
                android:id="@+id/comic_chapter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chuong 112"
                android:textColor="@color/white"
                android:textSize="10dp" />
            <TextView
                android:id="@+id/comic_createDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2 ngay truoc"
                android:textColor="@color/white"
                android:textSize="10dp" />
        </LinearLayout>
    </FrameLayout>
</androidx.cardview.widget.CardView>