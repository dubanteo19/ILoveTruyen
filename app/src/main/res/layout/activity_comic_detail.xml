<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:paddingHorizontal="15dp">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/layout_app_bar_comic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/transparent"
                android:contentDescription="@string/back_button_description"
                android:src="@drawable/arrow_back"
                tools:ignore="TouchTargetSizeCheck" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/report_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/round_linear"
                android:drawableStart="@drawable/ic_send_sencondary"
                android:drawablePadding="20dp"
                android:text="Báo cáo"
                android:textColor="@color/secondary"
                app:backgroundTint="@color/transparent"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:id="@+id/layout_scroll_view_detail"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_app_bar_comic"
        app:layout_constraintBottom_toTopOf="@id/layout_bottom_detail">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:ignore="ScrollViewSize">
            <LinearLayout
                android:id="@+id/layout_title_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_app_bar_comic"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="20dp">

                    <ImageView
                        android:layout_width="130dp"
                        android:layout_height="180dp"
                        android:layout_gravity="top"
                        android:contentDescription="main image"
                        android:src="@drawable/one_piece"
                        tools:ignore="HardcodedText" />
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingHorizontal="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="One Piece"
                        android:textAllCaps="false"
                        android:textSize="22sp"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/infomationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vui Hải Tặc; Đảo Hải tặc; OnePiece"
                        android:textSize="12sp" />

                    <TextView
                        style="@style/infomationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Trạng thái"
                        android:drawableStart="@drawable/ic_user_detail"
                        android:text="Đang cập nhật"
                        tools:ignore="HardcodedText" />

                    <TextView
                        style="@style/infomationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Lượt thích"
                        android:drawableStart="@drawable/ic_heart_detail"
                        android:text="325.515" />

                    <TextView
                        style="@style/infomationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Lượt xem"
                        android:drawableStart="@drawable/ic_eye_detail"
                        android:text="166.972.101" />

                    <TextView
                        style="@style/infomationDetail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="Thời gian"
                        android:drawableStart="@drawable/ic_clock_detail"
                        android:text="31/03/2003 12:39" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_status_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_title_comic">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="20dp"
                    android:drawableTop="@drawable/ic_play_detail"
                    android:drawablePadding="5dp"
                    android:text="Đang tiến hành" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/darker_gray" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:drawableTop="@drawable/ic_book_detail"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="218 chương" />
            </LinearLayout>


            <com.google.android.material.chip.ChipGroup
                android:id="@+id/layout_keyword_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:chipSpacing="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_status_comic"
                app:singleSelection="false">

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

                <include layout="@layout/button_keyword" />

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->

<!--                <include layout="@layout/button_keyword" />-->
            </com.google.android.material.chip.ChipGroup>

            <LinearLayout
                android:id="@+id/layout_description_comic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_keyword_search">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tóm tắt"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/more_see_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Xem thêm"
                    android:textAllCaps="false"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/text_normal" />
            </LinearLayout>

            <TextView
                android:id="@+id/text_view_content_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="AppBarLayout also requires a separate scrolling sibling in order to know when to scroll. The binding is done through the AppBarLayout.ScrollingViewBehavior behavior class, meaning that you should set your scrolling view's behavior to be an instance of AppBarLayout.ScrollingViewBehavior. A string resource containing the full class name is available."
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/layout_description_comic"
                tools:ignore="MissingConstraints" />

        </LinearLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_bottom_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/border_round"
            android:paddingHorizontal="40dp"
            android:text="Tiếp tục đọc"
            android:textAllCaps="false"
            app:backgroundTint="@color/secondary"
            tools:ignore="MissingConstraints" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/transparent"
            android:contentDescription="Add to favorites"
            android:drawableStart="@drawable/ic_save"
            app:layout_constraintEnd_toEndOf="parent"
            tools:ignore="MissingConstraints" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
