<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginBottom="5dp">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edittext"
        app:cardCornerRadius="30dp"
        app:cardElevation="26dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1.2"
            android:paddingVertical="10dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:contentDescription="User's avatar"
                android:src="@drawable/icons_comment"

                />
            <TextView
                android:id="@+id/user_comment_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:text="Nội dung bình luận"
                android:textSize="@dimen/text_normal"
                android:layout_gravity="center"
                android:paddingLeft="20dp"
                android:ellipsize="end"
                />
            <ImageView
                android:id="@+id/user_delete_comment"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_weight="0.5"
                android:src="@drawable/icons_delete"
                android:layout_gravity="center"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>